generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users{
  id Int @id @default(autoincrement())
  name String @db.VarChar(40)
  password String
  active Boolean @default(true)
  address Address[]
  contact Contact[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Contact {
  id Int @id @default(autoincrement())
  phone1 String
  phone2 String?
  email String
  socials String?
  userRelation Users @relation(fields: [user_Id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_Id Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Address {
  id Int @id @default(autoincrement())
  street String
  state String
  neighborhood String
  house_number String
  userRelation Users @relation(fields: [user_Id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_Id Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}