{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules/**", "dist/**", "tsconfig.json", "*.d.ts"]
	},

	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off"
			}
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"lineWidth": 80,
			"bracketSpacing": true,
			"bracketSameLine": true,
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
